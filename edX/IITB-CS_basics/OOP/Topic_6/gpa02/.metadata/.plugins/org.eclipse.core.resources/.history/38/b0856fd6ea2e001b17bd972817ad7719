#include "weapon.h"

//Weapon
void Weapon::setPower(int x){strength=x;}
int Weapon::return_strength(){return strength;}

//Rock
Rock::Rock():type('r'){}
bool Rock::battle(Weapon x){
	int s = strength, x_s = x.strength;
	if(x.type=='p'){s/=2;x_s*=2;}
	if(x.type=='s'){s*=2;x_s/=2;}
	if(s>x_s){return true;}
	else{return false;}
}

//Paper

Paper::Paper():type('p'){}
bool Paper::battle(Weapon x){
	int s = strength, x_s = x.strength;
		if(x.type=='r'){s*=2;x_s/=2;}
		if(x.type=='s'){s/=2;x_s*=2;}
		if(s>x_s){return true;}
		else{return false;}
}

//Scissor
Scissor::Scissor():type('s'){}
bool Scissor::battle(Weapon x){
	int s = strength, x_s = x.strength;
			if(x.type=='r'){s/=2;x_s*=2;}
			if(x.type=='p'){s*=2;x_s/=2;}
			if(s>x_s){return true;}
			else{return false;}
}
